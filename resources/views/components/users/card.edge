<div class="user-card">
  <div class="user-avatar">
    {{-- On simule un avatar avec les initiales si pas d'image --}}
    <span>{{ user.fullName.substring(0, 2).toUpperCase() }}</span>
  </div>
  
  <div class="user-info">
    <h3>{{ user.fullName }}</h3>
    <p class="user-email">{{ user.email }}</p>
    <div class="user-badge">Membre</div>
  </div>

  <div class="user-actions">
    <a href="{{ route('users.show', { id: user.id }) }}" class="btn-outline-sm">Voir le profil</a>
  </div>
</div>